{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/days",
      "destination": "/api/days.js"
    },
    {
      "source": "/api/words/:day",
      "destination": "/api/words/[day].js?day=:day"
    },
    {
      "source": "/api/stats",
      "destination": "/api/stats.js"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}


